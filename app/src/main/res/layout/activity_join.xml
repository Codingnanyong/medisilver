<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WGRAY"
    android:fillViewport="true"
    tools:context="com.example.parkhg.medisilver.activity.HealthInfoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/selectedDay"
        tools:context="com.example.parkhg.medisilver.activity.HealthInfoActivity">

        <LinearLayout
            android:id="@+id/joinlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/selectedDay"
            android:orientation="vertical"
            tools:context="com.example.parkhg.medisilver.activity.JoinActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="개인 입력 정보"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="이      름  "
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="42dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:background="@drawable/xml_edit_border"
                    android:ems="10"
                    android:hint="예 : 홍 길 동"
                    android:inputType="textPersonName"
                    android:maxLength="5"
                    android:textColorHint="#808080"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="출생   연도"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="26dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:text="보호자연락처"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/phNumber"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.29"
                    android:ems="10"
                    android:gravity="center"
                    android:maxLength="4"
                    android:onClick="mOnClick"
                    android:text="010)" />

                <EditText
                    android:id="@+id/editNumber"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_edit_border"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="4" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/editNumber2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_edit_border"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="4" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="개인 건강 정보"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="신 장"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editcm"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/xml_edit_border"
                    android:ems="10"
                    android:layout_marginLeft="5dp"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="cm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="체 중"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editkg"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/xml_edit_border"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="5dp"
                    android:maxLength="4"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="kg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="간 수 치"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editliver"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/xml_edit_border"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="IU/L" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="기타 질환 정보"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당 뇨"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/toggleYes"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:onClick="mOnClick"
                    android:text="ToggleButton"
                    android:textOff="있 음"
                    android:textOn="있 음" />

                <ToggleButton
                    android:id="@+id/toggleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:onClick="mOnClick"
                    android:text="ToggleButton"
                    android:textOff="없 음"
                    android:textOn="없 음" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/xml_edit_border"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혈 압"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/toggleHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:onClick="mOnClick"
                    android:text="ToggleButton"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textOff="고혈압"
                    android:textOn="고혈압" />

                <ToggleButton
                    android:id="@+id/toggleNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:onClick="mOnClick"
                    android:text="ToggleButton"
                    android:textOff="정 상"
                    android:textOn="정 상" />

                <ToggleButton
                    android:id="@+id/togglelow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:onClick="mOnClick"
                    android:text="ToggleButton"
                    android:textOff="저혈압"
                    android:textOn="저혈압" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button_state2"
            android:onClick="mOnClick"
            android:text="저  장"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>
